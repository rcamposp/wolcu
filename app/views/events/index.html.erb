<div id="events-index">	
	<div class="row">
	<% @events.each do |event| %>	
			<div class="col-sm-4">
				<div class="card">
				<%= link_to(event) do %>
				  <div class="card-img-top-cover" style="background-image:url('<%= event.image %>')" alt="<%= event.name %>"></div>
				<% end %>				  
				  <div class="card-block">
				    <h4><%= link_to "#{event.name}", event %></h4>
				    <p class="card-text"><%= event.date %></p>
				    <%= link_to "Get your tickets", event, class: "btn btn-primary"%>
				  </div>
				</div>
			</div>
				
	<% end %>
	</div>
</div>